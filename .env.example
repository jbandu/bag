# Copy this to .env and fill in your values

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================

# JWT Secret for signing tokens (generate with: python -c 'import secrets; print(secrets.token_urlsafe(32))')
JWT_SECRET=your_jwt_secret_here_min_32_chars

# Application secret key (generate with: python -c 'import secrets; print(secrets.token_urlsafe(32))')
SECRET_KEY=your_secret_key_here_min_32_chars

# =============================================================================
# AI CONFIGURATION
# =============================================================================

# Anthropic AI Configuration
ANTHROPIC_API_KEY=your_anthropic_key_here

# Neo4j Database (Use Neo4j Aura for production)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=baggageops123

# PostgreSQL (Neon) - PRIMARY DATABASE
NEON_DATABASE_URL=postgresql://user:password@host/database

# Legacy Supabase (optional, if still using)
SUPABASE_URL=https://placeholder.supabase.co
SUPABASE_KEY=placeholder-key
SUPABASE_SERVICE_KEY=placeholder-service-key

# Redis (Use Upstash for production)
REDIS_URL=redis://localhost:6379

# WorldTracer Integration (Optional)
WORLDTRACER_API_URL=https://worldtracer-api.example.com
WORLDTRACER_API_KEY=placeholder-worldtracer-key
WORLDTRACER_AIRLINE_CODE=CM

# SITA Messaging (Optional)
SITA_TYPE_B_ENDPOINT=https://sita-gateway.example.com
SITA_AIRLINE_CODE=CMXH

# Application Settings
ENVIRONMENT=production
LOG_LEVEL=INFO
API_PORT=8000
DASHBOARD_PORT=8501

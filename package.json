{
  "name": "baggage-ops-tests",
  "version": "1.0.0",
  "description": "E2E test automation for Baggage Operations Platform",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:api": "playwright test tests/e2e/api",
    "test:dashboard": "playwright test tests/e2e/dashboard",
    "test:ci": "playwright test --reporter=html,json",
    "test:debug": "playwright test --debug",
    "report": "playwright show-report",
    "install:browsers": "playwright install --with-deps"
  },
  "keywords": [
    "playwright",
    "testing",
    "e2e",
    "api-testing"
  ],
  "author": "Number Labs",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "dotenv": "^16.3.1"
  }
}

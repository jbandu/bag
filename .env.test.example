# Test Environment Configuration
# Copy this to .env for local test execution

# ========================================
# API Testing
# ========================================

# Local API server
API_BASE_URL=http://localhost:8000

# Railway deployment (uncomment to test against Railway)
# API_BASE_URL=https://your-api-project.railway.app

# ========================================
# Dashboard Testing
# ========================================

# Local Streamlit dashboard
DASHBOARD_URL=http://localhost:8501

# Railway dashboard deployment (if separate)
# DASHBOARD_URL=https://your-dashboard-project.railway.app

# ========================================
# Railway Configuration (for CI/CD)
# ========================================

# These are typically set as GitHub Secrets
# RAILWAY_STATIC_URL=https://your-api-project.railway.app
# RAILWAY_DASHBOARD_URL=https://your-dashboard-project.railway.app

# ========================================
# Test Configuration
# ========================================

# Run tests in CI mode
CI=false

# Test timeout (milliseconds)
TEST_TIMEOUT=30000

# Parallel workers (leave empty for auto)
# WORKERS=2

# ========================================
# Optional: API Credentials (for authenticated endpoints)
# ========================================

# If your API requires authentication
# API_KEY=your_api_key_here
# AUTH_TOKEN=your_auth_token_here

# ========================================
# Optional: Database Configuration
# ========================================

# For tests that need direct database access
# NEON_DATABASE_URL=postgresql://...
# NEO4J_URI=bolt://localhost:7687
# NEO4J_USER=neo4j
# NEO4J_PASSWORD=password
# REDIS_URL=redis://localhost:6379

# ========================================
# Optional: AI Configuration
# ========================================

# For tests that trigger AI processing
# ANTHROPIC_API_KEY=sk-ant-...

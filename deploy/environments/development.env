# Development Environment Configuration
# For local development and testing

# Environment
ENV=development
DEBUG=true
LOG_LEVEL=DEBUG

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=development
NEO4J_DATABASE=baggage_dev

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=2
API_RELOAD=true

# Rate Limiting (relaxed for dev)
RATE_LIMIT_PER_MINUTE=10000
BURST_SIZE=1000

# Circuit Breaker (relaxed for dev)
CIRCUIT_BREAKER_FAILURE_THRESHOLD=10
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=30

# Cache
CACHE_ENABLED=true
CACHE_TTL_SECONDS=60
CACHE_MAX_SIZE_MB=256

# External Systems (Mock in dev)
WORLDTRACER_API_URL=http://localhost:9001/mock
WORLDTRACER_API_KEY=dev_key
DCS_API_URL=http://localhost:9002/mock
DCS_API_KEY=dev_key
BHS_MQ_HOST=localhost
BHS_MQ_PORT=5672
COURIER_API_URL=http://localhost:9003/mock
NOTIFICATION_API_URL=http://localhost:9004/mock

# Feature Flags
ENABLE_SEMANTIC_ENRICHMENT=true
ENABLE_DATA_FUSION=true
ENABLE_AUTO_PIR_CREATION=false
ENABLE_COURIER_BOOKING=false
ENABLE_METRICS=true
ENABLE_TRACING=false

# Monitoring
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false

# Security (relaxed for dev)
OAUTH2_ENABLED=false
TLS_ENABLED=false
API_KEY_REQUIRED=false

# Tenant
TENANT_ID=dev
TENANT_NAME=development
